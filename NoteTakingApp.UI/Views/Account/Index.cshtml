@{
    ViewData["Title"] = "Account Settings";
}
<div  class="container mt-4">
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["Notification"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Account Settings</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Manage your account settings and security.</p>

                        <div class="list-group">
                            <a asp-action="ChangePassword"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span>Change Password</span>
                                <i class="bi bi-key"></i>
                            </a>

                            @* <a asp-action="" *@
                            @*    class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"> *@
                            @*     <span>Manage Phone Number (Coming Soon)</span> *@
                            @*     <i class="bi bi-phone"></i> *@
                            @* </a> *@

                            <a asp-action="ChangeEmail"
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <span>Update Email</span>
                                <i class="bi bi-envelope"></i>
                            </a>

                            <a asp-action="DeleteAccount" onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.');"
                               class="list-group-item list-group-item-action text-danger d-flex justify-content-between align-items-center"
                               data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                                <span>Delete Account</span>
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteAccountModalLabel">Confirm Account Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete your account? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="DeleteAccount" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Additional JS if needed
    </script>
}
