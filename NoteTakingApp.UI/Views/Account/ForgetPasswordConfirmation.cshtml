@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 text-center shadow-lg">
                <h3 class="text-info mb-4">Check Your Email</h3>
                <p>We have sent a password reset link to <strong>@ViewBag.Email</strong>. Please check your inbox and follow the instructions to reset your password.</p>
                <a href="mailto:@ViewBag.Email" class="btn btn-primary mt-3">Open Email</a>
            </div>
        </div>
    </div>
</div>
