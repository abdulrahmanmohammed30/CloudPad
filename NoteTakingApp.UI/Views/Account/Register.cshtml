@using NoteTakingApp.Core.DTO
@model NoteTakingApp.Core.Dtos.RegisterDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Register";
}
@{
    var countriesList = ViewBag.Countries as List<CountryDto>;
    IEnumerable<SelectListItem> countries = countriesList.Select((CountryDto c) => new SelectListItem()
    {
        Text = c.Name,
        Value = c.Id.ToString()
    });
}

<h2 class="text-center">Register</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Register" asp-controller="Account" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <!-- Name -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Profile Image URL -->
            <div class="mb-3">
                <label asp-for="ProfileImageUrl" class="form-label"></label>
                <input asp-for="ProfileImageUrl" type="url" class="form-control">
                <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
            </div>

            <!-- Country ID -->
            <div class="mb-3">
                <label asp-for="CountryId" class="form-label">Country</label>
                <select asp-for="CountryId" class="form-select" asp-items="countries">
                    <option value="">Select Country</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <!-- Birth Date -->
            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" type="date" class="form-control">
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <!-- Username -->
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

