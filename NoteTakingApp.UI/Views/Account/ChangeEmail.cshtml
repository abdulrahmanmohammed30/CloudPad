@model NoteTakingApp.Core.Dtos.UpdateEmailDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Change Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h3 class="text-center mb-4">Change Email</h3>
                <form asp-action="ChangeEmail" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">New Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter new email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Update Email</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}