@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 text-center shadow-lg">
                <h3 class="text-success mb-4">Password Reset Successful</h3>
                <p>Your password has been successfully reset. You can now log in using your new password.</p>
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">Go to Login</a>
            </div>
        </div>
    </div>
</div>
