@model NoteTakingApp.Core.Dtos.EmailRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Send Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center text-white" style="background-color:#0c8195;">
                    <h4 style="color:white;">Send Email</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SendEmail" asp-controller="Account" method="post">
                        <div class="mb-3">
                            <label asp-for="To" class="form-label"></label>
                            <input asp-for="To" class="form-control" placeholder="Enter recipient email" />
                            <span asp-validation-for="To" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" placeholder="Enter email subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Body" class="form-label"></label>
                            <textarea asp-for="Body" class="form-control" rows="5" placeholder="Enter email body"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsBodyHtml" class="form-check-input" />
                            <label asp-for="IsBodyHtml" class="form-check-label">Send as HTML</label>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <button type="submit" class="btn w-100 text-white" style="background-color:#0c8195;">Send Email</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
