@model NoteTakingApp.Core.Dtos.ProfileDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>User Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
</head>
<body>
<div class="container py-5">
    <div class="row">
        <!-- Profile Image -->
        <div class="col-md-4 text-center mb-3">
            @if(!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="/@Model.ProfileImageUrl" alt="Profile Picture" class="img-fluid rounded-circle" style="max-width: 200px;" />
            }
            else
            {
                <img src="https://placehold.co/200x200" alt="No Profile Picture" class="img-fluid rounded-circle" />
            }
        </div>

        <!-- Basic Info -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="card-title">@Model.Name</h2>
                        <div class="text-end mt-3">
                            <button class="btn btn-outline-primary" onclick="window.location.href='/updateProfile'">
                                Update <i class="bi bi-pencil-square"></i>
                            </button>
                        </div>
                    </div>
                    <p class="card-text mb-1">
                        <strong>Email:</strong> @Model.Email
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Username))
                    {
                        <p class="card-tex4t mb-1"><strong>Username:</strong> @Model.Username</p>
                    }
                    @if(!string.IsNullOrEmpty(Model.Role))
                    {
                        <p class="card-text mb-1"><strong>Role:</strong> @Model.Role</p>
                    }
                    <p class="card-text mb-1">
                        <strong>Member Since:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                    </p>
                    @if (!string.IsNullOrEmpty(Model.CountryName))
                    {
                        <p class="card-text mb-1"><strong>Country:</strong> @Model.CountryName</p>
                    }
                    @if (Model.BirthDate.HasValue)
                    {
                        <p class="card-text mb-1"><strong>Birth Date:</strong> @Model.BirthDate.Value.ToString("MMMM dd, yyyy")</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p class="card-text mb-1"><strong>Bio:</strong> @Model.Bio</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.PreferredLanguageName))
                    {
                        <p class="card-text mb-1"><strong>Preferred Language:</strong> @Model.PreferredLanguageName</p>
                    }

                    <!-- Stats -->
                    <div class="mt-3">
                        <div class="d-flex flex-wrap gap-3">
                            <span class="badge bg-primary">
                                Notes: @Model.NotesCount
                            </span>
                            <span class="badge bg-info text-dark">
                                Categories: @Model.CategoriesCount
                            </span>
                            <span class="badge bg-secondary">
                                Tags: @Model.TagsCount
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Social Links Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4>Social Links</h4>
                    @if (Model.SocialLinks != null && Model.SocialLinks.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach(var link in Model.SocialLinks)
                            {
                                <li class="list-group-item">
                                    <a href="@link.UserSocialLinkUrl" target="_blank" class="text-decoration-none">
                                        @link.UserSocialLinkUrl
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No social links available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
