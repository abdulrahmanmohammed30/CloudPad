@model NoteTakingApp.Core.Dtos.UserDto

@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-center text-white">
            <h3>User Profile</h3>
        </div>
        <div class="card-body text-center">
            <img src="@Model.ProfileImageUrl" alt="Profile Image" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
            <h4 class="card-title">@Model.Name (@Model.Username)</h4>
            <p class="text-muted">@Model.Role</p>
            <p><strong>Country:</strong> @Model.CountryName</p>
            <p><strong>Birth Date:</strong> @(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("yyyy-MM-dd") : "N/A")</p>

            <div class="mt-4">
                <a asp-controller="User" asp-action="Edit" class="btn btn-warning">Update Profile</a>
                <a asp-controller="User" asp-action="ChangePassword" class="btn btn-secondary">Change Password</a>
                <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>
