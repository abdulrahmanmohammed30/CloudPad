@if (User.Identity.IsAuthenticated && ViewContext.HttpContext.Request.Path != "/")
{

    <!-- Main Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <a class="navbar-brand" href="/note">
                    <i class="fa fa-sticky-note"></i> CloudPad
                </a>
            }
            else
            {
                <a class="navbar-brand" href="/">
                    <i class="fa fa-sticky-note"></i> CloudPad
                </a>

            }
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a href="/note" class="nav-link">My Notes</a></li>
                        <li class="nav-item"><a href="/category" class="nav-link">Categories</a></li>
                        <li class="nav-item"><a href="/tag" class="nav-link">Tags</a></li>

                        <li class="nav-item">
                            <form asp-action="Signout" asp-controller="Account" method="post">
                                <button type="submit" class="btn btn-link nav-link" style="border: none; background: none; cursor: pointer;">Sign Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a href="/account/login" class="nav-link">Login</a></li>
                        <li class="nav-item"><a href="/account/register" class="nav-link text-warning">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Secondary Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#secondaryNavbar"
                    aria-controls="secondaryNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="secondaryNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="/note" class="nav-link">Notes</a></li>
                    <li class="nav-item"><a href="/tag" class="nav-link">Tags</a></li>
                    <li class="nav-item"><a href="/category" class="nav-link">Categories</a></li>
                    <li class="nav-item"><a href="/note/create" class="nav-link">Create Note</a></li>
                    <li class="nav-item"><a href="/tag/create" class="nav-link">Create Tag</a></li>
                    <li class="nav-item"><a href="/category/create" class="nav-link">Create Category</a></li>
                    <li class="nav-item"><a href="/profile" class="nav-link">Profile</a></li>
                </ul>
            </div>
        </div>
    </nav>
}
else
{
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fa fa-sticky-note"></i>
                CloudPad
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a href="/note" class="nav-link smoothScroll">My Notes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/category" class="nav-link smoothScroll">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a href="/tag" class="nav-link smoothScroll">Tags</a>
                        </li>
                        <li class="nav-item">
                            <form asp-action="Signout" asp-controller="Account" method="post">
                                <button type="submit" class="btn btn-link nav-link" style="border: none; background: none; cursor: pointer;">Sign Out</button>
                            </form>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="/account/login" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="/account/register" class="nav-link contact" style="border-color: #FFD700; color:#FFD700;">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}