<section class="about section-padding pb-0" id="notes">
<div class="container">
    <div class="row">
        <div class="col-lg-7 mx-auto col-md-10 col-12">
            <div class="about-info">
                <h2 class="mb-4" data-aos="fade-up">Your <strong>Notes</strong></h2>
                <p class="mb-0" data-aos="fade-up">Create, edit, and organize your notes with ease. Add tags, search by title or content, and filter by tags.</p>
            </div>

            <!-- Add Note Form -->
            <div class="card mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card-body">
                    <h5 class="card-title">Add a New Note</h5>
                    <form action="/notes/create" method="post">
                        <div class="form-group">
                            <label for="noteTitle">Title</label>
                            <input type="text" class="form-control" id="noteTitle" name="noteTitle" required>
                        </div>
                        <div class="form-group">
                            <label for="noteContent">Content</label>
                            <textarea class="form-control" id="noteContent" name="noteContent" rows="3" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="noteTags">Tags</label>
                            <input type="text" class="form-control" id="noteTags" name="noteTags" placeholder="Enter tags separated by commas">
                        </div>
                        <button type="submit" class="btn btn-primary">Save Note</button>
                    </form>
                </div>
            </div>

            <!-- List of Notes -->
            <div class="card" data-aos="fade-up" data-aos-delay="200">
                <div class="card-body">
                    <h5 class="card-title">Recent Notes</h5>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <h6>Note Title 1</h6>
                            <p>This is the content of the first note.</p>
                            <small class="text-muted">Tags: work, important</small>
                        </li>
                        <li class="list-group-item">
                            <h6>Note Title 2</h6>
                            <p>This is the content of the second note.</p>
                            <small class="text-muted">Tags: personal</small>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</section>